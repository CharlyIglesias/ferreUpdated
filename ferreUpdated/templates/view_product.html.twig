{% extends "base2.html.twig" %}

{% block title %}Ferre Los Pinos{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/style/createProduct.css">
{% endblock %}
{% block body %}
<link rel="shortcut icon" href="https://res.cloudinary.com/dtmln7c4k/image/upload/v1631892085/avmizy1growjc2fni4rt.jpg">

<div class="page-container">
    <div class="row mb-3 mt-3">
        <div class="col-lg-12 col-xl-6">
            <div class="row">
                <img style="max-width: 90%; margin-left: auto; margin-right: auto;" id="blah" class="image" src="{{product.imageLink}}" alt="Logo">
            </div>
        </div>
        <div class="col-lg-12 col-xl-6">
            
                <h4 style="font-size: 40px;">{{product.name}}</h4>
                <hr class="divider">
                <div class="row" style="margin-top: 20px">
                    {% for brand in product.brandProductRelations %}
                        <b style="text-transform: uppercase; font-size: 1.5rem;">&#8287- {{brand.brand.name}}</b>
                    {% endfor %}
                    <b style="text-transform: uppercase; font-size: 1.5rem;">&#8287 - </b>
                </div>
                <div>
                    <b class="familiasALas" style="font-size: 1.3rem;">Familias a las que pertenece:</b><br>
                    
                    {% for family in product.familyProductRelations %}
                        <span style="font-size: 1.2rem;" class="familiasRounded">{{family.family.name}}</span>
                    {% endfor %}
                </div>
                <hr class="divider">
                    <ul class="dots">
                        {% for desc in descriptions %}
                            <li class="dots">{{desc}}</li>
                        {% endfor %}
                    </ul>
                <hr class="divider">
                <div class="row">
                    <ul class="ks-cboxtags">
                        {% if product.inStock == true %}
                            <li><input type="checkbox" id="checkboxSucursal" v-on:click="checkSucursal($event)" value="sucursal" checked disabled><label for="checkboxSucursal" >Suele estar en Sucursal</label></li>
                        {% else %}
                            <li><input type="checkbox" id="checkboxPedido" @change="checkSucursal($event)" value="pedido" checked disabled><label for="checkboxPedido" >Solamente Bajo Pedido</label></li>
                        {% endif %}
                    </ul>
                </div>
                <hr class="divider">
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
    <script src="/js/createProduct.js"></script>
    <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script> 
 
{% endblock %}
